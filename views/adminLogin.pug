extends navAdmin

block content
  div.center.form
    div.pure-g
      div.pure-u-1
        h2 Login to Mom's Library

  div.pure-g
    div.pure-u-1-3
    div.pure-u-2-3
      form.pure-form.pure-form-aligned
        fieldset
          div.pure-control-group
            label(for="userEmail") Email Address
            input#userEmail.pure-input-rounded(type="email" placeholder="User@Email.com" required="" name="user[email]")
          div.pure-control-group
            label(for="userPassword") Password
            input#userPassword.pure-input-rounded(type="password" placeholder="Password123" required="" name="user[password]")
          div.pure-controls
            button.pure-button.pure-button-primary(type="submit") Submit
  
  // This will be removed when login functionality is built
  div.pure-g
    div.pure-u-2-5
    div.pure-u-1-5.center
      a(href="/admin") Login
    div.pure-u-2-5